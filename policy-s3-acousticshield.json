{
  "Version": "2012-10-17",
  "Statement": [{
    "Sid": "AllowReadWriteToAcousticShieldBuckets",
    "Effect": "Allow",
    "Action": [
      "s3:PutObject","s3:GetObject","s3:DeleteObject",
      "s3:ListBucket","s3:GetBucketLocation"
    ],
    "Resource": [
      "arn:aws:s3:::acousticshield-raw",
      "arn:aws:s3:::acousticshield-raw/*",
      "arn:aws:s3:::acousticshield-ml",
      "arn:aws:s3:::acousticshield-ml/*"
    ]
  }]
}

